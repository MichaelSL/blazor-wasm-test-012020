@inject NavigationManager NavManager

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Blazor Regex Test</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-beaker" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="oi oi-info" aria-hidden="true"></span> About
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@NavManager.BaseUri.Replace("https://", "https://monitor.")">
                <span class="oi oi-dashboard" aria-hidden="true"></span> HW Monitor
            </NavLink>
        </li>
        <li>&nbsp;</li>
        <li class="nav-item px-3">
            <a class="nav-link" target="_blank" href="https://github.com/MichaelSL/blazor-wasm-test-012020">
                <span class="oi oi-fork" aria-hidden="true"></span> v @GetAppVersion()
            </a>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private string GetAppVersion()
    {
        try
        {
            return System.Reflection.Assembly.GetExecutingAssembly().GetName().Version.ToString();
        }
        catch
        {
            return string.Empty;
        }
    }
}
